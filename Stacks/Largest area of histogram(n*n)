def getMaxArea(arr):
    n=len(arr)
    max=arr[0]
    for index in range(1,n-1):
        r_c=0
        l_c=0
        for r in range(index+1,n):
            if arr[r]>=arr[index]:
                r_c=r_c+1
            else:
                break
    
        for l in range(index-1,-1,-1):
            if arr[l]>=arr[index]:
                l_c=l_c+1
            else:
                break
    
        if ((l_c+r_c+1)*arr[index])>=max:
            max=((l_c+r_c+1)*arr[index])

    return max
